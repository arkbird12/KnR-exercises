#include <stdio.h>

int main() {
    float celcius, fahr;
    int lower, upper, step;

    lower = 0; 
    upper = 300;
    step = 20;

    celcius = lower;
    while(celcius <= upper) {
        fahr = (((celcius*9)/5)+32);
        printf("%3.0f %6.1f\n", celcius, fahr);
        celcius += step;
    }
}
